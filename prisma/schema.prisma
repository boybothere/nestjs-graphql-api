generator client {
  provider = "prisma-client-js"
  // output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Game {
  id          Int           @id @default(autoincrement())
  name        String
  genre       String
  achievement Achievement[]
}

enum Difficulty {
  EASY
  MEDIUM
  HARD
}

model Achievement {
  id          Int        @id @default(autoincrement())
  title       String
  description String
  difficulty  Difficulty
  points      Int
  game        Game       @relation(fields: [gameId], references: [id])
  gameId      Int
}
